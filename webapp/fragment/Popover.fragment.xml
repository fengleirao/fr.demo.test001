<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Popover
		id="popover"
		title="{Name}"
		class="sapUiContentPadding"
		placement="Bottom"
		initialFocus="email"
	>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button text="Call Back" press="onPopoverCallback" />
			</Toolbar>
		</footer>
		<Label text="{/myLabel}" />
	</Popover>
</core:FragmentDefinition>